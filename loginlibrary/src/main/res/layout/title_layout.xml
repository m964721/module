<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/title_status_bar_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title_status_bar_tv"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/title_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#132456"
            android:text="返回"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/title_center_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/title_status_bar_tv"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="16dp"
        android:text="标题"
        android:textColor="#456123" />

</RelativeLayout>